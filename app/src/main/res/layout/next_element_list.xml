<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="5"
    android:gravity="center"
    android:orientation="horizontal"
    android:paddingStart="@dimen/component_padding"
    android:paddingTop="@dimen/component_padding_half"
    android:paddingEnd="@dimen/component_padding"
    android:paddingBottom="@dimen/component_padding_half">

    <LinearLayout
        android:id="@+id/next_el_line"
        android:layout_width="42dp"
        android:layout_height="28dp"
        android:orientation="horizontal"
        android:paddingStart="10dp"
        android:paddingEnd="0dp">

        <TextView
            android:id="@+id/next_el_line_number"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#000000"
            android:gravity="center"
            android:textAlignment="center"
            android:textColor="#FFFFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:text="1" />
    </LinearLayout>

    <TextView
        android:id="@+id/next_el_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:fontFamily="@font/nunito_regular"
        android:paddingStart="10dp"
        android:paddingEnd="0dp"
        android:textAlignment="textStart"
        android:textColor="@android:color/black"
        android:textSize="@dimen/component_content_font_size"
        android:textStyle="bold"
        tools:text="Sample text" />

    <TextView
        android:id="@+id/next_el_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="0dp"
        android:textAlignment="textEnd"
        android:textColor="@android:color/black"
        tools:text="7 min" />

</LinearLayout>