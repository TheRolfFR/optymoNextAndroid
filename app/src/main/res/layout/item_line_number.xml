<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/item_next_stop_line_bg"
        android:layout_width="43dp"
        android:layout_height="28dp"
        android:layout_marginTop="@dimen/component_padding_half"
        android:layout_marginBottom="@dimen/component_padding_half"
        android:background="@color/colorLine1"
        android:minHeight="26dp"
        android:orientation="horizontal"
        android:paddingLeft="13dp"
        tools:ignore="RtlHardcoded,RtlSymmetry">

        <TextView
            android:id="@+id/item_next_stop_number"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorLineBlackBackground"
            android:fontFamily="@font/nunito_extrabold"
            android:gravity="center"
            android:textAlignment="center"
            android:textColor="@color/colorLineOnBackground"
            android:textSize="17sp"
            tools:text="1" />
    </LinearLayout>
</LinearLayout>
