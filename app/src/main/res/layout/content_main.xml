<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".controller.activities.MainActivity"
    tools:showIn="@layout/activity_main"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/main_favorite_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="6">

        <TextView
            android:id="@+id/main_favorite_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:text="@string/favorites"
            android:textSize="24sp" />

        <ImageButton
            android:id="@+id/main_favorite_refresh_button"
            android:layout_width="0dp"
            android:layout_height="42dp"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:background="#00000000"
            android:contentDescription="@string/refresh_button"
            android:layoutDirection="ltr"
            android:maxWidth="42dp"
            android:maxHeight="42dp"
            android:padding="0dp"
            android:scaleType="fitEnd"
            app:srcCompat="@drawable/ic_bookmark_plus" />

    </LinearLayout>

    <ListView
        android:id="@+id/main_favorite_next_stops"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:divider="#00000000"
        android:dividerHeight="5dp" />

    <LinearLayout
        android:id="@+id/main_general_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="6">

        <TextView
            android:id="@+id/main_general_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:text="@string/main_all_stops"
            android:textSize="24sp" />

        <ImageButton
            android:id="@+id/main_general_refresh_button"
            android:layout_width="0dp"
            android:layout_height="42dp"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:background="#00000000"
            android:contentDescription="@string/refresh_button"
            android:layoutDirection="ltr"
            android:maxWidth="42dp"
            android:maxHeight="42dp"
            android:padding="0dp"
            android:scaleType="fitEnd"
            app:srcCompat="@drawable/ic_bookmark_plus" />

    </LinearLayout>

    <Spinner
        android:id="@+id/main_stops_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:spinnerMode="dialog" />

    <ListView
        android:id="@+id/main_next_stops"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:divider="#00000000"
        android:dividerHeight="5dp">

    </ListView>


</LinearLayout>