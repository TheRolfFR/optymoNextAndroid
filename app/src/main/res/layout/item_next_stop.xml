<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="5"
    android:gravity="top|left"
    android:orientation="horizontal"
    android:paddingStart="@dimen/component_padding"
    android:paddingEnd="@dimen/component_padding"
    tools:ignore="RtlHardcoded">

    <TextView
        android:id="@+id/item_next_stop_stop_name"
        android:layout_width="0dp"
        android:layout_height="28dp"
        android:layout_weight="1"
        android:ellipsize="end"
        android:fontFamily="@font/nunito_light"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:textAlignment="textStart"
        android:textColor="@android:color/black"
        android:textSize="@dimen/component_content_font_size"
        android:textStyle="bold"
        tools:ignore="RtlCompat"
        tools:text="Stop name" />

    <TextView
        android:id="@+id/item_next_stop_time"
        android:layout_width="wrap_content"
        android:layout_height="28dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="0dp"
        android:ellipsize="end"
        android:fontFamily="@font/nunito_regular"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:textAlignment="textEnd"
        android:textColor="@android:color/black"
        tools:ignore="RtlCompat"
        tools:text="7 min" />

</LinearLayout>