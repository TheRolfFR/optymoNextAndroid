<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="start|top"
    android:orientation="vertical">

    <com.ferfalk.simplesearchview.SimpleSearchView
        android:id="@+id/searchView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:minHeight="100dp"
        android:padding="@dimen/component_padding"
        app:cardCornerRadius="@dimen/component_border_radius">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/dialog_search_search_input"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:autofillHints="Search stop, line..."
                android:ems="10"
                android:hint="Search stop, line..."
                android:inputType="textPersonName"
                tools:ignore="HardcodedText,UnusedAttribute" />

            <ImageView
                android:id="@+id/dialog_search_search_or_remove_button"
                android:layout_width="@dimen/search_icon_size"
                android:layout_height="@dimen/search_icon_size"
                android:contentDescription="@string/search_icon_description"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/ic_search_black_24dp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>